namespace org.ibm.digitalbustracking
abstract participant Agency{
o String organization
o Address ticket
}
concept Address{
o String city
}
participant driver identified by driverId extends Agency{
o String driverId
} 
participant conductor identified by conductorId extends Agency{
o String conductorId
}
participant passenger identified by passengerId extends Agency{
o String passengerId
}
asset bus identified by busId{
o String busId
o String ac
o String nonac
--> Agency owner
}
asset ticket identified by ticketId{
o String ticketId
o String amount
--> Agency owner
}

enum ac{
o Shivneri
o Shivshahi
o Shraddha
}
enum nonac{
o local
o minibus
}
enum amount{
o standard
o medium
o average
}
transaction buyTicket{
--> Agency owner
o String ticketId
}
transaction cancelTicket{
--> Agency owner
o String ticketId
}

